FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml .
COPY venomqa/ ./venomqa/
RUN pip install --no-cache-dir -e .

COPY examples/full_featured_app/qa/ ./

RUN mkdir -p /reports

CMD ["venomqa", "run", "--journey-dir", "/app/journeys", "--config", "/app/venomqa.yaml"]
