# VenomQA Environment Variables
# =============================

# Base URL for the application under test
VENOMQA_BASE_URL=http://localhost:3000

# Database connection URL (optional)
# VENOMQA_DB_URL=postgresql://user:password@localhost:5432/venomqa_test

# Request timeout in seconds
VENOMQA_TIMEOUT=30

# Retry settings
VENOMQA_RETRY_MAX_ATTEMPTS=3
VENOMQA_RETRY_DELAY=1
VENOMQA_RETRY_BACKOFF_MULTIPLIER=2

# Report output directory
VENOMQA_REPORT_OUTPUT_DIR=./reports

# Comma-separated list of report formats (html,json,junit)
VENOMQA_REPORT_FORMATS=html,json,junit

# Number of parallel test paths
VENOMQA_PARALLEL_PATHS=4

# Enable verbose mode (true/false)
VENOMQA_VERBOSE=false
